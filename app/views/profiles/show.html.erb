<div class="max-w-4xl mx-auto mt-8 bg-white shadow-lg rounded-xl p-8 border">
  <% content_for :title, "My Profile" %>

  <!-- Profile Container -->
  <div class="bg-white p-6 rounded-xl flex flex-col items-center">

    <% if current_user.student? && @student.present? %>
      <!-- QR Code Section (Students Only) -->
      <div class="bg-white p-6 rounded-xl flex items-center justify-center">
        <%= generate_qr_code(@student) %>
      </div>
    <% end %>

    <!-- User Info Section -->
    <div class="mt-6 w-full bg-white p-6 rounded-xl">
      <div class="grid grid-cols-1 rounded-xl md:grid-cols-2 gap-6 bg-gray-50 p-6">

        <div>
          <label for="first_name" class="block text-sm font-medium text-gray-700">First Name</label>
          <input
            id="first_name"
            name="first_name"
            class="input input-bordered w-full mt-2"
            type="text"
            value="<%= current_user.first_name %>"
            readonly
            />
        </div>

        <div>
          <label for="last_name" class="block text-sm font-medium text-gray-700">Last Name</label>
          <input
            id="last_name"
            name="last_name"
            class="input input-bordered w-full mt-2"
            type="text"
            value="<%= current_user.last_name %>"
            readonly
            />
        </div>

        <div>
          <label for="school_email" class="block text-sm font-medium text-gray-700">Username</label>
          <input
            id="school_email"
            name="school_email"
            class="input input-bordered w-full mt-2"
            type="email"
            value="<%= current_user.email_address %>"
            readonly
            />
        </div>

        <div>
          <label for="personal_email" class="block text-sm font-medium text-gray-700">Personal Email</label>
          <input
            id="personal_email"
            name="personal_email"
            class="input input-bordered w-full mt-2"
            type="email"
            value="<%= current_user.personal_email %>"
            readonly
            />
        </div>

        <% if current_user.student? && @student.present? %>
          <div>
            <label for="grade" class="block text-sm font-medium text-gray-700">Grade</label>
            <input
              id="grade"
              name="grade"
              class="input input-bordered w-full mt-2"
              type="text"
              value="<%= @student.grade %>"
              readonly
              />
          </div>

          <div>
            <label for="classroom" class="block text-sm font-medium text-gray-700">Classroom</label>
            <input
              id="classroom"
              name="classroom"
              class="input input-bordered w-full mt-2"
              type="text"
              value="<%= @student.classroom&.class_id || 'Not Assigned' %>"
              readonly
              />
          </div>
        <% end %>

        <div class="md:col-span-2">
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <div class="flex items-center mt-2">
            <input
              id="password"
              name="password"
              class="input input-bordered w-full text-gray-700"
              type="password"
              value="********"
              readonly
              />
            <button
              id="edit-password"
              type="button"
              class="ml-2 p-2 w-10 h-10 text-gray-500 hover:text-gray-700
             hover:bg-gray-100 rounded transition-colors"
            >
              <i class="fas fa-edit"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Change Password Modal -->
    <div
      id="password-modal"
      class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center"
    >
      <div class="bg-white p-6 rounded-xl w-1/3">
        <h2 class="text-lg font-medium">Change Password</h2>
        <%= form_with model: @user, url: profile_update_password_path, method: :patch, local: true do |f| %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

          <!-- New Password -->
          <div class="mt-4">
            <label for="new-password" class="block text-sm font-medium text-gray-700">New Password</label>
            <div class="flex items-center mt-2">
              <%= f.password_field :password,
                                   class: "input input-bordered w-full text-gray-700",
                                   required: true,
                                   id: "new-password" %>
              <button
                type="button"
                id="toggle-new-password"
                class="ml-2 p-2 w-10 h-10 text-gray-500 hover:text-gray-700
                       hover:bg-gray-100 rounded transition-colors"
              >
                <i class="fas fa-eye"></i>
              </button>
            </div>
          </div>

          <!-- Confirm Password -->
          <div class="mt-4">
            <label for="confirm-password" class="block text-sm font-medium text-gray-700">Confirm Password</label>
            <div class="flex items-center mt-2">
              <%= f.password_field :password_confirmation,
                                   class: "input input-bordered w-full text-gray-700",
                                   required: true,
                                   id: "confirm-password" %>
              <button
                type="button"
                id="toggle-confirm-password"
                class="ml-2 p-2 w-10 h-10 text-gray-500 hover:text-gray-700
                       hover:bg-gray-100 rounded transition-colors"
              >
                <i class="fas fa-eye"></i>
              </button>
            </div>
          </div>

          <!-- Buttons with consistent spacing -->
          <div class="mt-6 flex justify-end space-x-2">
            <button
              type="button"
              id="close-modal"
              class="text-gray-500"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="btn btn-primary"
            >
              Update
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "controllers/profile.js" %>
