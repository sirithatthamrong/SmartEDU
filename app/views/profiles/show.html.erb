<div class="max-w-4xl mx-auto mt-8 bg-white shadow-lg rounded-xl p-8 border">
  <% content_for :title, "My Profile" %>

  <!-- Profile Container (White Background) -->
  <div class="p-6 rounded-xl flex flex-col items-center">

    <% if current_user.student? && @student.present? %>
      <!-- QR Code Section (Still White) -->
      <div class="bg-white p-6 rounded-xl flex items-center justify-center">
        <%= generate_qr_code(@student.uid) %>
      </div>
    <% end %>

    <!-- User Info Card -->
    <div class="mt-6 w-full p-6 rounded-xl bg-gray-50">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

        <div>
          <label for="first_name" class="block text-sm font-medium text-gray-700">First Name</label>
          <input id="first_name" class="input input-bordered w-full mt-2" type="text"
                 value="<%= current_user.first_name %>" readonly>
        </div>

        <div>
          <label for="last_name" class="block text-sm font-medium text-gray-700">Last Name</label>
          <input id="last_name" class="input input-bordered w-full mt-2" type="text"
                 value="<%= current_user.last_name %>" readonly>
        </div>

        <% if current_user.student? && @student.present? %>
          <div>
            <label for="grade" class="block text-sm font-medium text-gray-700">Grade</label>
            <input id="grade" class="input input-bordered w-full mt-2" type="text"
                   value="<%= @student.grade %>" readonly>
          </div>

          <div>
            <label for="classroom" class="block text-sm font-medium text-gray-700">Classroom</label>
            <input id="classroom" class="input input-bordered w-full mt-2" type="text"
                   value="<%= @student.classroom&.class_id || 'Not Assigned' %>" readonly>
          </div>
        <% end %>

        <!-- School Email -->
        <div class="md:col-span-2">
          <label for="school_email" class="block text-sm font-medium text-gray-700">School Email</label>
          <input id="school_email" class="input input-bordered w-full mt-2" type="email"
                 value="<%= current_user.email_address %>" readonly>
        </div>

        <!-- Personal Email -->
        <div class="md:col-span-2">
          <label for="personal_email" class="block text-sm font-medium text-gray-700">Personal Email</label>
          <input id="personal_email" class="input input-bordered w-full mt-2" type="email"
                 value="<%= current_user.personal_email %>" readonly>
        </div>

        <% if current_user.student? && @student.present? %>
          <div class="md:col-span-2">
            <label for="parent_email" class="block text-sm font-medium text-gray-700">Parent Email</label>
            <input id="parent_email" class="input input-bordered w-full mt-2" type="email"
                   value="<%= @student.parent_email_address %>" readonly>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
