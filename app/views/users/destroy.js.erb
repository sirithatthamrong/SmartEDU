const userElement = document.getElementById("user-<%= @user.id %>");

if (userElement) {
    userElement.remove();
    showSuccessToast("<%= @user.email_address %> has been removed!");
}

// Show success toast notification
function showSuccessToast(message) {
    const toast = document.createElement("div");
    toast.className = "fixed bottom-5 right-5 bg-red-600 text-white px-6 py-3 rounded-lg shadow-lg text-sm font-semibold flex items-center gap-2 animate-fade";
    toast.innerHTML = `<span class="text-lg">‚ùå</span> ${message}`;
    document.body.appendChild(toast);

    setTimeout(() => {
        toast.classList.add("opacity-0");
        setTimeout(() => toast.remove(), 500);
    }, 1500);
}
