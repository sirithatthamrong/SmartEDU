<div id="deleteModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden z-50">
  <div class="bg-white p-6 rounded-lg shadow-lg w-1/3 text-center">
    <h2 class="modal-title">Confirm Deletion</h2>
    <p class="my-4">Are you sure you want to remove <span id="deleteEntityEmail" class="font-bold"></span>?</p>
    <div class="modal-buttons">
      <form id="deleteForm" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="hidden" name="_method" value="delete">
        <button type="submit" class="entity-btn entity-btn-delete">
          Yes, Remove
        </button>
      </form>
      <button onclick="closeModal()" class="entity-btn entity-btn-secondary">Cancel</button>
    </div>
  </div>
</div>

