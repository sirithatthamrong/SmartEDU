<%= render "shared/notice" %>
<%= render "shared/confirmation_modal" %>

<% content_for :title, "Manage Teachers" %>

<div class="my-entity-container px-4 md:px-6 overflow-x-auto">
  <% if @teachers.any? %>
    <table class="entity-table" id="shared-table" data-turbo="false">
      <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Personal Email</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @teachers.each do |teacher| %>
        <tr id="teacher-<%= teacher.id %>">
          <td><%= teacher.id %></td>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
          <td><%= teacher.email_address %></td>
          <td><%= teacher.personal_email %></td>
          <td>
            <button class="btn entity-btn-delete" style="height: 2.5rem;"
                    onclick="confirmDelete(<%= teacher.id %>, '<%= teacher.email_address %>', '/teachers')">
              <i class="fas fa-trash"></i>
            </button>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-left text-gray-600 mt-6 px-6">No teachers available.</p>
  <% end %>
</div>

<%= javascript_include_tag "controllers/delete_entity_controller" %>
<%= javascript_include_tag "controllers/students_table_controller" %>
