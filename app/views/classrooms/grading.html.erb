<% content_for :title, "Grades" %>

<h1 class="text-3xl font-bold text-center mb-6">All Grades</h1>

<div class="text-center mb-6">

  <%= link_to "See all classrooms", classrooms_path, class: "class: inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded " %>

</div>

<div class="flex space-x-4 overflow-x-auto px-4">
  <% @grades.each do |grade| %>
    <div class="flex-shrink-0">
      <%= link_to by_grade_classrooms_path(grade), class: "inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" do %>
        Grade <%= grade %>
      <% end %>
    </div>
    <% end %>
</div>
