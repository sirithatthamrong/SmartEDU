<%= render "shared/notice" %>
<div class="student-card max-w-md mx-auto mt-3">
  <div class="mt-2">
    <%= link_to students_path, class: "btn" do %>
      <i class="fas fa-arrow-left"></i> Back
    <% end %>
  </div>
  <%= render @student %>
  <div class="mt-8 flex justify-center space-x-4">
    <%= link_to edit_student_path(@student), class: "btn btn-primary" do %>
      <i class="fas fa-edit"></i> Edit
    <% end %>

    <%= button_to student_path(@student), method: :delete,
                  class: "btn btn-error delete-student-btn",
                  data: { student_name: @student.name } do %>
      <i class="fas fa-trash"></i> Delete
    <% end %>
  </div>
</div>

<%= javascript_include_tag "controllers/delete_confirmation", "data-turbo-track": "reload" %>
