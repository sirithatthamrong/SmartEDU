<%= render "shared/notice" %>
<div class="student-card max-w-md mx-auto mt-3">
  <div class="mt-2">
    <%= link_to students_path, class: "btn" do %>
      <i class="fas fa-arrow-left"></i> Back
    <% end %>
  </div>
  <%= render @student %>
<div class="mt-8 flex justify-center space-x-4">
  <%= link_to edit_student_path(@student), class: "btn btn-primary" do %>
    <i class="fas fa-edit"></i> Edit
  <% end %>
  <%= button_to student_path(@student), method: :delete, class: "btn btn-error", data: { turbo_confirm: "Are you sure you want to destroy this student?" } do %>
    <i class="fas fa-trash "></i> Delete
  <% end %>
</div>
</div>
<h1>Student Profile</h1>

<p><strong>Name:</strong> <%= @student.name %></p>
<p><strong>UID:</strong> <%= @student.uid %></p>
<p><strong>Grade:</strong> <%= @student.grade %></p>
<p><strong>Email:</strong> <%= @student.student_email_address %></p>
<p><strong>Parent Email:</strong> <%= @student.parent_email_address %></p>

<% if current_user.admin? %>
  <%= link_to "Edit Profile", edit_student_path(@student), class: "btn btn-primary" %>
<% end %>
