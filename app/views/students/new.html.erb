<%= render "shared/notice" %>

<% content_for :title, "Create New Student" %>

<div class="student-card max-w-md mx-auto mt-4">

  <div class="mt-4">
    <%= link_to students_path, class: "entity-btn back-btn text-black" do %>
      <i class="fas fa-arrow-left"></i> Back
    <% end %>
  </div>

  <div class="mt-4">
    <h1 class="text-2xl font-bold mb-4 text-center">Create New Student</h1>
    <%= render "form", student: @student %>
  </div>
</div>
