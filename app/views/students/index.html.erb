<script>
    document.addEventListener("turbo:load", function () {
        const tableId = "#students-table";

        if ($.fn.DataTable.isDataTable(tableId)) {
            $(tableId).DataTable().destroy();
        }

        $(tableId).DataTable({
            responsive: true,
            pageLength: 10,
            language: {
                search: "",
                searchPlaceholder: "Search students...",
            },
        });

