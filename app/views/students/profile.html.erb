<div class="max-w-4xl mx-auto mt-8 bg-white shadow-lg rounded-xl p-8 border">
  <% content_for :title, "My Profile" %>

  <!-- Profile Container -->
  <div class="bg-gray-50 p-6 rounded-xl flex flex-col items-center">

    <!-- QR Code Section -->
    <div class="bg-white p-6 rounded-xl shadow-md flex items-center justify-center">
      <%= generate_qr_code(@student.uid) %>
    </div>

    <!-- Student Info Section (Now below QR code) -->
    <div class="mt-6 w-full bg-white p-6 rounded-xl shadow-md">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

        <div>
          <label for="first_name" id="first_name_label" class="block text-sm font-medium text-gray-700">First Name</label>
          <div id="first_name" aria-labelledby="first_name_label" class="mt-1 p-4 w-full rounded-lg border border-gray-300 bg-gray-50">
            <%= @student.user.first_name %>
          </div>
        </div>

        <div>
          <label for="last_name" id="last_name_label" class="block text-sm font-medium text-gray-700">Last Name</label>
          <div id="last_name" aria-labelledby="last_name_label" class="mt-1 p-4 w-full rounded-lg border border-gray-300 bg-gray-50">
            <%= @student.user.last_name %>
          </div>
        </div>

        <div>
          <label for="grade" id="grade_label" class="block text-sm font-medium text-gray-700">Grade</label>
          <div id="grade" aria-labelledby="grade_label" class="mt-1 p-4 w-full rounded-lg border border-gray-300 bg-gray-50">
            <%= @student.grade %>
          </div>
        </div>

        <div>
          <label for="classroom" id="classroom_label" class="block text-sm font-medium text-gray-700">Classroom</label>
          <div id="classroom" aria-labelledby="classroom_label" class="mt-1 p-4 w-full rounded-lg border border-gray-300 bg-gray-50">
            <%= @student.classroom&.class_id || "Not Assigned" %>
          </div>
        </div>

        <div class="md:col-span-2">
          <label for="student_email" id="student_email_label" class="block text-sm font-medium text-gray-700">Student Email</label>
          <div id="student_email" aria-labelledby="student_email_label" class="mt-1 p-4 w-full rounded-lg border border-gray-300 bg-gray-50">
            <%= @student.student_email_address %>
          </div>
        </div>

        <div class="md:col-span-2">
          <label for="parent_email" id="parent_email_label" class="block text-sm font-medium text-gray-700">Parent Email</label>
          <div id="parent_email" aria-labelledby="parent_email_label" class="mt-1 p-4 w-full rounded-lg border border-gray-300 bg-gray-50">
            <%= @student.parent_email_address %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
