<% content_for :title, "Dashboard" %>

<div class="container mx-auto py-10">
  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Total Students -->
    <div class="bg-white shadow-lg rounded-xl p-6 text-center border border-gray-200">
      <i class="fa-solid fa-user-graduate text-blue-600 text-6xl mb-3"></i>
      <h3 class="text-lg font-semibold text-gray-700">Total Students</h3>
      <p class="text-5xl font-bold text-gray-900"><%= number_with_delimiter(@total_students) %></p>
      <p class="text-gray-500 mt-1">Active: <span class="text-green-500 font-semibold"><%= @active_students %></span> | Inactive: <span class="text-red-500 font-semibold"><%= @inactive_students %></span></p>
    </div>

    <!-- Total Teachers -->
    <div class="bg-white shadow-lg rounded-xl p-6 text-center border border-gray-200">
      <i class="fa-solid fa-chalkboard-teacher text-yellow-500 text-6xl mb-3"></i>
      <h3 class="text-lg font-semibold text-gray-700">Total Teachers</h3>
      <p class="text-5xl font-bold text-gray-900"><%= number_with_delimiter(@total_teachers) %></p>
      <p class="text-gray-500 mt-1">Teachers in this school</p>
    </div>

    <!-- Total Check-Ins -->
    <div class="bg-white shadow-lg rounded-xl p-6 text-center border border-gray-200">
      <i class="fa-solid fa-user-check text-green-500 text-6xl mb-3"></i>
      <h3 class="text-lg font-semibold text-gray-700">Total Check-Ins</h3>
      <p class="text-5xl font-bold text-gray-900"><%= number_with_delimiter(@attendance_count) %></p>
      <p class="text-gray-500 mt-1">Last Check-in: <%= @last_checkin.nil? ? 'N/A' : time_ago_in_words(@last_checkin) %> ago</p>
    </div>

    <!-- Attendance Rate -->
    <div class="bg-white shadow-lg rounded-xl p-6 text-center border border-gray-200">
      <i class="fa-solid fa-chart-line text-purple-500 text-6xl mb-3"></i>
      <h3 class="text-lg font-semibold text-gray-700">Attendance Rate</h3>
      <p class="text-5xl font-bold text-gray-900"><%= @attendance_rate %>%</p>
      <p class="text-gray-500 mt-1">Based on active students</p>
    </div>

  </div>
</div>
